%************************************************************************************************
%                 EN-TETE (titre, auteur, logos)
%************************************************************************************************

\setbeamertemplate{headline}{  
  % \leavevmode

  \begin{beamercolorbox}[wd=\paperwidth]{headline}
    \begin{columns}[T]

      \begin{column}{.15\paperwidth}
        \vskip.5cm
        \begin{flushleft}
          \vskip1cm \hskip1cm
          \includegraphics[width=\linewidth]{\logolitis}
        \end{flushleft}
        \vskip.5cm
      \end{column}

      \begin{column}{.6\paperwidth}
        \vskip1.5cm
        % \raggedleft
        \begin{center}
          \usebeamercolor{title in headline}{\color{fg}\textbf{\Huge{\inserttitle}}\\[3ex]}
          \usebeamercolor{author in headline}{\color{fg}\Large{\insertauthor}\\[1ex]}
          \usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}\\[1ex]}     
        \end{center}

      \end{column}
      \begin{column}{.15\paperwidth}
        \vskip.5cm
        \vfill
        \begin{flushright}
          \includegraphics[width=.7\linewidth]{\logoinstitut} \\
          \vskip.5cm
          \includegraphics[width=.7\linewidth]{\logolaboratoire}
        \end{flushright}

        \vskip.5cm
      \end{column}
      \begin{column}{.03\paperwidth}
      \end{column}
    \end{columns}
  \end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
    \rule{0pt}{3pt} %2
  \end{beamercolorbox}
}



